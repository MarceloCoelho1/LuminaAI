generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String
  name            String
  lastName        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  memberships     Member[]
  sentInvites     Invite[] @relation("SentInvites")
  receivedInvites Invite[] @relation("ReceivedInvites")

  @@map("users")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stripeCustomerId String? @unique
  plan             String  @default("FREE")
  credits          Int     @default(0)

  members   Member[]
  invites   Invite[]
  documents Document[]

  @@map("tenants")
}

model Member {
  id        String     @id @default(uuid())
  role      TenantRole @default(MEMBER)
  createdAt DateTime   @default(now())

  userId   String
  tenantId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@map("members")
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Invite {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  status    InviteStatus @default(PENDING)
  role      TenantRole   @default(MEMBER)

  userId   String
  tenantId String

  user   User   @relation("ReceivedInvites", fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  inviterId String?
  inviter   User?   @relation("SentInvites", fields: [inviterId], references: [id])

  @@map("invites")
}

enum DocumentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Document {
  id         String         @id @default(uuid())
  title      String
  storageKey String
  mimeType   String
  size       Int
  status     DocumentStatus @default(PENDING)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("documents")
}
